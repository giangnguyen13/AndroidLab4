        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn_success" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/success</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn_secondary" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/secondary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="btn_warning" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/warning</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>